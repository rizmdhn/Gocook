<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="131.5dp"
        android:layout_margin="20dp"
        android:background="#ffffff"
        android:id="@+id/layoutini">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/testoverlay"
            android:layout_width="match_parent"
            android:layout_height="125dp" />

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="110dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/tripImage"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/scrambledegg" />


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/trip_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="6sp"
                    android:text="Scrambeled Egg"
                    android:textColor="#000000"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <RatingBar
                    android:id="@+id/RatingBar_Id"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:progressTint="#f15421"
                    android:rating="4" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="4sp"
                    android:text="Chef's Top Pick!"
                    android:textColor="#f15421"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:letterSpacing="-0.01"

                    android:lineSpacingExtra="4sp"
                    android:text="Time"
                    android:textColor="#bec2ce"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/trip_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/poppins_bold"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="0sp"
                    android:text="+ - 30 Min"
                    android:textColor="#1f2533"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>